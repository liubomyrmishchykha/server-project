
@{
    Layout = null;
}

<div ng-controller="UsersListCtrl">
    <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2">
        <a href="#/users/add" class="btn btn-primary">Add user</a>
        <br /><br />
        <div class="navbar-search">
            <input ng-model="query" type="text" class="form-control" placeholder="Search">
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-responsive" data-show-columns="true" data-id-field="InstanceName">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="user in users | filter:query | orderBy:orderProp">
                        <td>{{user.Name}}</td>
                        <td>
                            <a class="btn btn-primary  glyphicon glyphicon-search" href="#/users/edit/{{user.Id}}">
                                Edit
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-danger  glyphicon glyphicon-trash" href="#/users/delete/{{user.Id}}">
                                Delete
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>